#cloud-config
package_update: true

packages:
  - nginx
  - git
  - docker.io

write_files:
  - path: /etc/nginx/sites-available/my-site.conf
    permissions: '0644'
    content: |
      server {
        listen 80;
        server_name _;
        location / {
            proxy_pass http://0.0.0.0:5000;
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
      }

runcmd:
  - ln -s /etc/nginx/sites-available/my-site.conf /etc/nginx/sites-enabled/
  - rm /etc/nginx/sites-enabled/default
  - systemctl restart nginx
  - systemctl start docker
  - systemctl enable docker
  - git clone https://github.com/JamesLau2001/testing-pyramid.git /home/ubuntu/testing-pyramid
  - |
    cat > /home/ubuntu/testing-pyramid/.env << 'EOF'
    DB_URL='${DB_URL}'
    EOF
  - chmod 600 /home/ubuntu/testing-pyramid/.env
  - chown ubuntu:ubuntu /home/ubuntu/testing-pyramid/.env
  - docker build -t testing-pyramid:latest /home/ubuntu/testing-pyramid
  - docker stop testing-pyramid || true
  - docker rm testing-pyramid || true
  - docker run -d -p 5000:5000 --name testing-pyramid testing-pyramid:latest